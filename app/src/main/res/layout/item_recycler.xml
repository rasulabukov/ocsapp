<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp"
    style="@style/SCREEN"
    android:foreground="?attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/computer_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/test"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена"
            android:layout_marginHorizontal="16dp"
            android:textSize="20sp"
            android:textColor="#0085FF"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество"
            android:layout_marginHorizontal="16dp"
            style="@style/TEXT"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:layout_marginHorizontal="16dp"
            style="@style/TEXT"
            android:layout_marginTop="5dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оценка"
                android:drawablePadding="5dp"
                android:drawableTint="#FF8E00"
                style="@style/TEXT"
                android:drawableStart="@drawable/round_star_24"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отзывы"
                style="@style/TEXT"
                android:layout_marginStart="10dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/rounded_business_messages_24"
                android:textStyle="bold"
                />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/round_favorite_24"
            android:paddingTop="3dp"
            android:background="@drawable/bg_favourite_item"
            android:layout_alignParentEnd="true"
            android:layout_margin="7dp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
