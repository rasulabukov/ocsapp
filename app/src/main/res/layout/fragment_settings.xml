<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аккаунт"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            style="@style/TEXT"
            android:textStyle="bold"
            android:fontFamily="@font/adlam_display"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SCREEN"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Настройки аккаунта"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_person_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Конфиденциальность"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_lock_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Безопасность"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_security_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Поделиться профилем"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_share_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Язык"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_language_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />


        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кэш и мобильный трафик"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            style="@style/TEXT"
            android:textStyle="bold"
            android:fontFamily="@font/adlam_display"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SCREEN"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Освобождение места"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_delete_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Хранилище"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_storage_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Экономия мобильного трафика"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_data_usage_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Уведомления и звуки"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/baseline_notifications_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />


        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поддержка и справка"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            style="@style/TEXT"
            android:textStyle="bold"
            android:fontFamily="@font/adlam_display"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SCREEN"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Сообщить о проблеме"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_flag_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Поддержка"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_contact_support_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Информация"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_info_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />



        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вход в аккаунт"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            style="@style/TEXT"
            android:textStyle="bold"
            android:fontFamily="@font/adlam_display"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SCREEN"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Сменить аккаунт"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/rounded_change_circle_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="Выйти"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:drawableStart="@drawable/baseline_logout_24"
                android:paddingBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                style="@style/TEXT"
                />


        </LinearLayout>


    </LinearLayout>



</ScrollView>